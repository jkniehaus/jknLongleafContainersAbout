params {
    config_profile_description    = "UNC longleaf SLURM profile"
    config_profile_contact        = 'Jesse Niehaus'
    config_profile_contact_github = '@jkniehaus'
    config_profile_contact_email  = 'jesse_niehaus@med.unc.edu'
    config_profile_url            = "https://help.rc.unc.edu/longleaf-cluster/"
}

apptainer {
    enabled    = true
    autoMounts = true
    cacheDir   = "/work/users/k/y/kylius0/singularity_images_cache"
    registry   = 'quay.io'
}

process {
    resourceLimits = [
        memory: 3041.GB,
        cpus: 256,
        time: 240.h
